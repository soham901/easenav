{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"strict": true,
		"declaration": true,
		"declarationMap": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"noUncheckedIndexedAccess": true,
		"baseUrl": ".",
		"paths": {
			"@easenav/core": ["packages/core/src/index.ts"]
		}
	}
}
